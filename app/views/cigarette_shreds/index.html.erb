<div class = wrapper>
  <h1>刻み</h1>
  <%= link_to "製造状況ページへ", root_path %>
    <div class = manufacturing_link></div>
  <h2>新規材料登録</h2>
  <%= form_with(model: @cigarette_shred, local: true, method: :post, class: "material-form") do |form| %>
    <%= form.text_field :name, placeholder: "材料名を入力して下さい", class: "material-input" %>
    <%= form.submit "追加する"%>
  <% end %>

  <table>
    <thead>
      <tr>
        <th>NO</th>
        <th></th>
        <th></th>
        <th></th>
        <th>材料名</th>
      </tr>
    </thead>
    <tbody>
      <% @cigarette_shreds.each do |cigarette_shred| %>
        <tr>
          <td class="material__show"><%= cigarette_shred.id%></td>
          <td></td>
          <td></td>
          <td></td>
          <td class="material__show"><%= cigarette_shred.name%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>